extends ../layout

block content
  section.container
    h1.text-center PHOTOS
    .row
      .col-12.col-md-8.col-lg-10.mx-auto
        form(class='form-inline justify-content-center', action='/api/photos' method='post' enctype='multipart/form-data')
          label(class='sr-only', for='picUrl') Url
          input(type='file', name='image', accept='image/*', required, class='form-control mb-2 mr-sm-2', id='picUrl')
          button(type='submit', class='btn btn-primary mb-2') Submit
          
    .row
      each photo in photos
        .col-12.col-md-4.col-lg-3.card
          img(class='card-img-top', src=photo.url, alt=photo.id)
          .card-body.d-flex.justify-content-between
            a(href='/photos/' + photo.id, class='btn btn-primary') More Info
            button(type='button', class='btn btn-primary')
              | Likes
              span.badge.badge-light= photo.likes